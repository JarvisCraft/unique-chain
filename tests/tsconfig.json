{
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    "**/node_modules/**/*"
  ],
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "lib": ["es2015"]
}
