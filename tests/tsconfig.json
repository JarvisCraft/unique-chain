{
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    "**/node_modules/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "paths": {
      "@polkadot/api/augment": [
        "./src/interfaces/augment-api.ts"
      ],
      "@polkadot/types/augment": [
        "./src/interfaces/augment-types.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es2017"
  ],
}
